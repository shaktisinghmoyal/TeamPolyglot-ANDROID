<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimaryDark">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">15dp</item>


    </style>

    <style name="AppThemeWithActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textAllCaps">false</item>


    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/gradient_spinner</item>

    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RobotoTextViewStyleMedium" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CustomEditText" parent="android:Widget.EditText">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:textSize">14dp</item>
        <item name="android:ems">10</item>
        <item name="android:paddingLeft">16dp</item>

    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#00BE7D</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ActiveTextStyle" parent="CustomButtonTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#00BE7D</item>

    </style>

    <style name="InactiveTextStyle" parent="CustomButtonTextStyle">
        <item name="android:textColor">#00BE7D</item>
        <item name="android:background">#FFFFFF</item>


    </style>

    <style name="CustomButtonTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="Opaque" parent="android:Widget.TextView">
        <item name="android:textColor">#999999</item>
    </style>

    <style name="SemiOpaque" parent="android:Widget.TextView">
        <item name="android:textColor">#666666</item>
    </style>

    <style name="Clear" parent="android:Widget.TextView">
        <item name="android:textColor">#444444</item>
    </style>

    <style name="ClearMedium" parent="RobotoTextViewStyleMedium">
        <item name="android:textColor">#444444</item>
    </style>

    <style name="loginText" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#2a2d35</item>
        <item name="android:textSize">40dp</item>
    </style>

    <style name="OpaqueRegular14" parent="Opaque">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="OpaqueRegular12" parent="Opaque">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="OpaqueRegular11" parent="Opaque">
        <item name="android:textSize">11dp</item>
    </style>

    <style name="OpaqueMedium12" parent="Opaque">
        <item name="android:fontFamily">@style/RobotoTextViewStyleMedium</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="SemiOpaqueRegular14" parent="SemiOpaque">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="SemiOpaqueRegular12" parent="SemiOpaque">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="SemiOpaqueRegular15" parent="SemiOpaque">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="SemiOpaqueRegular16" parent="SemiOpaque">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="SemiOpaqueMedium15" parent="SemiOpaque">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">15dp</item>

    </style>


    <style name="ClearRegular16" parent="Clear">
        <item name="android:textSize">16dp</item>

    </style>

    <style name="ClearRegular15" parent="Clear">
        <item name="android:textSize">15dp</item>

    </style>

    <style name="Regular20" parent="android:Widget.TextView">
        <item name="android:textSize">20dp</item>

    </style>

    <style name="ClearRegular14" parent="Clear">
        <item name="android:textSize">14dp</item>

    </style>

    <style name="ClearRegular12" parent="Clear">
        <item name="android:textSize">12dp</item>

    </style>

    <style name="Regular18" parent="android:Widget.TextView">
        <item name="android:textSize">18dp</item>

    </style>
    <style name="ClearMedium18" parent="ClearMedium">
        <item name="android:textSize">18dp</item>

    </style>


    <style name="ClearMedium14" parent="ClearMedium">
        <item name="android:textSize">14dp</item>

    </style>

    <style name="ClearMedium16" parent="ClearMedium">
        <item name="android:textSize">16dp</item>

    </style>

    <style name="ClearBold14" parent="Clear">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>

    </style>

    <style name="category">
        <item name="android:fontFamily">@style/RobotoTextViewStyleMedium</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#888888</item>

    </style>

    <style name="ConfirmationText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#2BB432</item>

    </style>

</resources>
